<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/rate_app_text"
        android:textAlignment="center"
        android:textSize="15sp" />

    <Button
        android:id="@+id/negative_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="17dp"
        android:text="Нет, спасибо"
        android:layout_alignRight="@+id/textView"
        android:layout_alignLeft="@+id/textView" />

    <Button
        android:id="@+id/neutral"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/negative_button"
        android:layout_alignStart="@+id/negative_button"
        android:layout_below="@+id/negative_button"
        android:text="Напомнить позже"
        android:layout_alignRight="@+id/negative_button"
        android:layout_alignLeft="@+id/negative_button" />

    <Button
        android:id="@+id/positive_button"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/neutral"
        android:layout_alignStart="@+id/neutral"
        android:layout_below="@+id/neutral"
        android:text="Оценить"
        android:layout_alignRight="@+id/neutral"
        android:layout_alignLeft="@+id/neutral" />

</RelativeLayout>